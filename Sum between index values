import java.util.*;

 class sum
 {
   public static void main(String args[])
   { 
    System.out.println("Enter size of array");
    Scanner sc= new Scanner(System.in);
    int t=sc.nextInt();
    int a[]= new int[t];
    System.out.println("Enter array elements");
    for(int i=0;i<t;i++)
    a[i]=sc.nextInt();
    System.out.println("Enter left index and right index");
    int l=sc.nextInt(), r=sc.nextInt(), s=0;
    if((t>l) && (t>r) && (l<=r)){
      for(int i=l;i<=r;i++)
      s=s+a[i];
      System.out.println("The sum is "+s);
    }
    else
    System.out.println("Invalid index values");
   }
 }
Output :

Enter size of array
5
Enter array elements
2
43
21
34
6
Enter left index and right index
2
4
The sum is 61
